<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoblinModeMaui.TownPage"
             Title="TownPage">
    <VerticalStackLayout>
        <Button
            Text="Rest"
            Clicked="Rest" />
        <Button
            Text="Get Help"
            Clicked="GetHelp" />

        <Picker 
            x:Name="EnemyPicker" 
            Title="Choose an Enemy">
        </Picker>
        <Button
            Text="Fight Opponent!"
            Clicked="Fight" />

    </VerticalStackLayout>
    
</ContentPage>